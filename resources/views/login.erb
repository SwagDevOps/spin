<%
    self.page_title = 'Login Page'
%>

<div class="grid">
    <div class="col-md-12">
        <div class="mdl-card mdl-shadow--4dp">
            <header class="mdl-card__title">
                <h2 class="mdl-card__title-text">
                    Authentication
                </h2>
            </header>

            <form method="POST" action="/login" class="mdl-card__supporting-text">
                <%= csrf_tag %>

                <div class="grid">
                    <div class="col-sm-4 col-bleed-y">
                        <div class="mdl-textfield mdl-textfield--floating-label">
                            <label class="mdl-textfield__label" for="username">
                                Username
                            </label>

                            <input type="text" class="mdl-textfield__input"
                                   id="username" name="username"
                                   required="required"/>
                        </div>
                    </div>

                    <div class="col-sm-4 col-bleed-y">
                        <div class="mdl-textfield mdl-textfield--floating-label">
                            <label for="password" class="mdl-textfield__label">
                                Password
                            </label>

                            <input type="password" class="mdl-textfield__input"
                                   id="password" name="password"
                                   required="required"/>
                        </div>
                    </div>

                    <div class="col-sm-12 col-bleed-y">
                        <button type="submit" class="mdl-button mdl-button--raised mdl-button--colored">
                            Submit
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


