<header id='fixed-header' class="android-header mdl-layout__header mdl-layout__header--waterfall">
    <div class="mdl-layout__header-row">
        <h1>
            <a class="android-title mdl-layout-title" href="/">
                Unicorn Agency
            </a>
        </h1>
        <% # Add spacer, to align navigation to the right in desktop %>
        <div class="android-header-spacer mdl-layout-spacer"></div>
        <% # Navigation %>
        <section class="android-navigation-container">
            <nav class="android-navigation mdl-navigation">
                <% if current_user %>
                    <%= link_to('/logout', class: 'mdl-navigation__link mdl-typography--text-uppercase') do
                      html.span('class': 'icon material-icons', 'aria-hidden': true) { 'account_circle' } +
                      'Logout'
                    end %>
                <% else %>
                    <%= link_to('/login', class: 'mdl-navigation__link mdl-typography--text-uppercase') do
                      html.span('class': 'icon material-icons', 'aria-hidden': true) { 'account_circle' } +
                      'Login'
                    end %>
                <% end %>
            </nav>
        </section>
    </div>
</header>
